<%- include("./partials/header") %>

<!-- Hero Section -->
<section class="hero d-flex align-items-center justify-content-center text-center" 
         style="
           background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
                       url('/images/city-bg.jpg') center/cover no-repeat;
           min-height: 60vh; /* reduced height */
           padding: 60px 15px; /* more compact */
           color: white;
           position: relative;
         ">
  <div class="container">
    <h1 class="display-4 fw-bold animate__animated animate__fadeInDown">ðŸš€ Welcome to UrbanX</h1>
    <p class="lead mb-3 animate__animated animate__fadeInUp">Smart Civic Issue Reporting & Management System</p>
    <a href="#features" class="btn btn-primary btn-lg shadow-sm animate__animated animate__fadeInUp animate__delay-1s">Explore Features</a>
  </div>

  <!-- Optional overlay for extra style -->
  <div style="
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: rgba(0,0,0,0.35);
        z-index: 1;
      "></div>
</section>

<!-- Optional CSS for responsive adjustments -->

<!-- Features / Stats -->
<section id="features" class="py-5">
  <div class="container">
    <div class="row text-center">
      <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm p-4 hover-scale">
          <i class="fas fa-map-marker-alt fa-3x text-primary mb-3"></i>
          <h5 class="fw-bold">Report Issues Easily</h5>
          <p>Pin exact locations of civic issues with just a few clicks.</p>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm p-4 hover-scale">
          <i class="fas fa-users fa-3x text-success mb-3"></i>
          <h5 class="fw-bold">Community Driven</h5>
          <p>Engage with other citizens and see real-time updates.</p>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card border-0 shadow-sm p-4 hover-scale">
          <i class="fas fa-tachometer-alt fa-3x text-warning mb-3"></i>
          <h5 class="fw-bold">Fast Resolution</h5>
          <p>Issues tracked and managed by local authorities efficiently.</p>
        </div>
      </div>
    </div>

    <!-- Highlight Numbers -->
    <div class="row text-center mt-5">
      <div class="col-md-3 mb-3">
        <h2 class="fw-bold text-primary">500+</h2>
        <p>Resolved Issues</p>
      </div>
      <div class="col-md-3 mb-3">
        <h2 class="fw-bold text-success">1200+</h2>
        <p>Active Users</p>
      </div>
      <div class="col-md-3 mb-3">
        <h2 class="fw-bold text-warning">50+</h2>
        <p>Local Authorities</p>
      </div>
      <div class="col-md-3 mb-3">
        <h2 class="fw-bold text-info">100%</h2>
        <p>Citizen Satisfaction</p>
      </div>
    </div>
  </div>
</section>

<!-- Call-to-Action -->
<section class="cta text-center py-4 position-relative" 
         style="
           background: linear-gradient(135deg, #007bff, #0056b3);
           color: white;
           overflow: hidden;
         ">
  <!-- Optional decorative background shapes -->
  <div style="
        position: absolute;
        top: -50px; left: -50px;
        width: 150px; height: 150px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
        z-index: 0;
      "></div>
  <div style="
        position: absolute;
        bottom: -50px; right: -50px;
        width: 200px; height: 200px;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
        z-index: 0;
      "></div>

  <div class="container-fluid position-relative" style="z-index: 1;">
    <h3 class="mb-3 fw-bold animate__animated animate__fadeInDown">Found an issue in your city?</h3>
    <a href="/reports/new" class="btn btn-light btn-lg shadow-sm animate__animated animate__fadeInUp animate__delay-1s"
       style="transition: transform 0.3s ease, box-shadow 0.3s ease;">
      Report Now
    </a>
  </div>
</section>


<!-- Optional: Animate.css & Custom Styles -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
<style>
  html, body {
  margin: 0;
  padding: 0;
  width: 100%;
  overflow-x: hidden; /* prevent horizontal scroll */
}
.hero, .cta {
  width: 100%;
  padding-left: 0;
  padding-right: 0;
}

  .hover-scale {
    transition: transform 0.3s ease;
  }
  .hover-scale:hover {
    transform: translateY(-5px);
  }
  .hero h1, .hero p {
    text-shadow: 2px 2px 8px rgba(0,0,0,0.6);
  }

.hero .container {
  position: relative;
  z-index: 2; /* text above overlay */
}

@media (max-width: 768px) {
  .hero {
    min-height: 50vh;
    padding: 40px 15px;
  }

  .hero h1 {
    font-size: 2rem;
  }

  .hero p {
    font-size: 1rem;
  }
}
.cta .btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 20px rgba(0,0,0,0.3);
}
@media (max-width: 768px) {
  .cta h3 {
    font-size: 1.5rem;
  }
  .cta .btn {
    font-size: 1rem;
    padding: 10px 25px;
  }
}
</style>



