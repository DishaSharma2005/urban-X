<%- include("./partials/header") %>

<div class="container" style="
    max-width: 1600px;
    margin: 2.5em auto;
    padding: 0 2em;
">
    
    <section class="hero" style="
        position: relative;
        text-align: center;
        padding: 4em 2em;
        color: white;
        background: linear-gradient(rgba(0, 51, 102, 0.85), rgba(0, 51, 102, 0.85)), 
                            url('https://source.unsplash.com/1600x900/?city,skyline') no-repeat center center/cover;
        border-radius: 8px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 3em;
    ">
        <h2 style="
            font-size: 2em;
            margin-bottom: 0.3em;
            font-weight: 800;
            line-height: 1.2;
        ">Municipal Services Streamlined. Report Issues Instantly.</h2>
        <p style="
            font-size: 1.15em;
            max-width: 800px;
            margin: 0.5em auto 2em;
            font-weight: 400;
        ">Empowering citizens with a direct, transparent platform to address infrastructure, safety, and cleanliness concerns across the city.</p>
        <a href="/reports/new" style="
            display: inline-block;
            padding: 1em 3em;
            background-color: #DC3545; /* Urgency Red */
            color: white;
            text-decoration: none;
            border: none;
            border-radius: 6px;
            font-size: 1.2em;
            font-weight: 600;
            text-transform: uppercase;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
        ">
            <i class="fas fa-exclamation-triangle"></i> Start a New Report
        </a>
    </section>
    
    <section style="
        background-color: #F8F9FA; /* Light Background */
        padding: 2.5em;
        margin-bottom: 3em;
        border-radius: 6px;
    ">
        <h2 style="
            text-align: center;
            font-size: 2em;
            color: #003366; /* Authority Blue */
            font-weight: 600;
            margin-bottom: 1em;
        ">Our Impact at a Glance</h2>
        
        <div style="
            display: flex;
            justify-content: space-around;
            gap: 10px;
            margin-top: 2em;
            border: 1px solid #DEE2E6; /* Border */
            border-radius: 6px;
            background-color: white;
        ">
            <div style="
                flex: 1;
                text-align: center;
                padding: 1.5em 0;
                border-right: 1px solid #DEE2E6;
            ">
                <h2 style="
                    font-size: 2.5em;
                    font-weight: 800;
                    margin: 0;
                    color: #28A745; /* Success Green */
                ">500+</h2>
                <p style="
                    font-size: 0.9em;
                    text-transform: uppercase;
                    color: #6C757D;
                    margin-top: 5px;
                ">Resolved Issues</p>
            </div>
            
            <div style="
                flex: 1;
                text-align: center;
                padding: 1.5em 0;
                border-right: 1px solid #DEE2E6;
            ">
                <h2 style="
                    font-size: 2.5em;
                    font-weight: 800;
                    margin: 0;
                    color: #003366; /* Authority Blue */
                ">1200+</h2>
                <p style="
                    font-size: 0.9em;
                    text-transform: uppercase;
                    color: #6C757D;
                    margin-top: 5px;
                ">Active Users</p>
            </div>
            
            <div style="
                flex: 1;
                text-align: center;
                padding: 1.5em 0;
                border-right: 1px solid #DEE2E6;
            ">
                <h2 style="
                    font-size: 2.5em;
                    font-weight: 800;
                    margin: 0;
                    color: #FFC107; /* Warning Yellow */
                ">50+</h2>
                <p style="
                    font-size: 0.9em;
                    text-transform: uppercase;
                    color: #6C757D;
                    margin-top: 5px;
                ">Local Authorities</p>
            </div>
            
            <div style="
                flex: 1;
                text-align: center;
                padding: 1.5em 0;
            ">
                <h2 style="
                    font-size: 2.5em;
                    font-weight: 800;
                    margin: 0;
                    color: #007bff; /* Secondary Action Blue */
                ">100%</h2>
                <p style="
                    font-size: 0.9em;
                    text-transform: uppercase;
                    color: #6C757D;
                    margin-top: 5px;
                ">Satisfaction Goal</p>
            </div>
        </div>
    </section>

    <section class="section" style="
        background-color: white;
        padding: 2.5em;
        border-radius: 6px;
        border: 1px solid #DEE2E6;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
        margin-bottom: 2.5em;
    ">
        <h2 style="
            font-size: 2em;
            color: #003366;
            border-bottom: 2px solid #DEE2E6;
            padding-bottom: 0.4em;
            margin-bottom: 1.2em;
            font-weight: 600;
        ">Select a Reporting Category</h2>
        
        <p style="margin-bottom: 1.5em; color: #6C757D; font-size: 0.95em;">Click the issue type below for a guided form that ensures your request reaches the correct department efficiently.</p>

        <div style="
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        ">
            <% 
                const defaultCategories = [
                    { name: "Potholes & Road Damage", icon: "fa-road" },
                    { name: "Waste Collection & Dumping", icon: "fa-dumpster-fire" },
                    { name: "Public Safety & Lighting", icon: "fa-lightbulb" },
                    { name: "Water & Utility Leaks", icon: "fa-faucet" },
                    { name: "Park & Public Area Maintenance", icon: "fa-tree" },
                    { name: "Graffiti & Vandalism", icon: "fa-paint-brush" }
                ];
            
                const categories = (typeof reportCategories !== 'undefined' && reportCategories.length > 0) ? reportCategories : defaultCategories; 
            %>

            <% categories.forEach(category => { %>
                <div style="
                    background-color: #EBF5FF; /* Light Blue Card BG */
                    border: 1px solid #D4E9FF;
                    border-radius: 4px;
                    padding: 1.5em;
                    text-align: left;
                    cursor: pointer;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.03);
                    border-left: 4px solid #007bff; /* Secondary Action Blue Highlight */
                " onclick="window.location.href='/reports/new?category=<%= encodeURIComponent(category.name || category) %>'">
                    <i class="fas <%= category.icon || 'fa-map-marker-alt' %>" style="
                        font-size: 1.8em;
                        color: #007bff;
                        margin-bottom: 10px;
                        display: block;
                    "></i>
                    <h3 style="
                        font-size: 1.1em;
                        color: #003366;
                        margin: 0.4em 0;
                        font-weight: 600;
                    "><%= category.name || category %></h3>
                    <p style="
                        font-size: 0.85em;
                        color: #6C757D;
                        margin: 0;
                    ">Issues affecting <%= (category.name || category).toLowerCase() %>.</p>
                </div>
            <% }); %>
        </div>
    </section>

    <section style="
        background-color: #F8F9FA;
        padding: 2.5em;
        border-radius: 6px;
        margin-bottom: 2.5em;
    ">
        <h2 style="
            font-size: 2em;
            color: #003366;
            border-bottom: 2px solid #DEE2E6;
            padding-bottom: 0.4em;
            margin-bottom: 1.2em;
            font-weight: 600;
        ">Track Your Report Status</h2>
        <p style="color: #6C757D; margin-bottom: 1.5em; font-size: 0.95em;">Already submitted a report? Enter your **Report ID** below for real-time updates and resolution timelines.</p>
        
        <form action="/reports/status" method="GET" style="
            display: flex;
            gap: 10px;
            align-items: center;
            max-width: 600px;
        ">
            <input type="text" name="id" placeholder="Enter Report ID (e.g., CC-2025-12345)" required style="
                flex-grow: 1;
                padding: 0.9em 1em;
                border: 1px solid #DEE2E6;
                border-radius: 4px;
                font-size: 0.95em;
            ">
            <button type="submit" style="
                padding: 0.9em 1.5em;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 4px;
                font-size: 0.95em;
                font-weight: 600;
                cursor: pointer;
            ">Track Status <i class="fas fa-arrow-circle-right"></i></button>
        </form>
    </section>

</div>

<%- include("./partials/footer") %>